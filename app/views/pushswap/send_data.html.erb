<head>
  <%= stylesheet_link_tag "pushswap", "data-turbo-track": "reload"%>

</head>


<div class="flash-messages">
  <% if flash[:error].present? %>
    <div class="error">
      <%= flash[:error] %>
    </div>
  <% end %>
</div>

<%= form_tag({action: 'send_data'}, method: 'post', remote: true,  id: 'number-form', data: { turbo: false }) do %>
    <%= text_area_tag :input, '', id:'numbers-input' %>
    <%= submit_tag 'Get moves'%>
<% end %>

<%= javascript_include_tag 'validation','data-turbolinks-eval': 'false' %>
<%= javascript_include_tag 'barsAnimation','data-turbolinks-eval': 'false' %>